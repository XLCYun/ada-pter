{
  "name": "ada-pter-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/ada-pter",
    "packages/providers/*",
    "packages/integrations/*",
    "packages/middlewares/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter '*' dev",
    "release:ci": "multi-semantic-release \"packages/ada-pter\" \"packages/providers/*\" \"packages/integrations/*\" \"packages/middlewares/*\" --sequential-init --first-parent",
    "release:dry-run": "bun run release:ci --dry-run",
    "test": "bun run test:unit",
    "test:unit": "bun run test:unit:bun",
    "test:unit:bun": "bun test packages",
    "test:unit:node": "vitest run",
    "test:live": "bun test --conditions=development tests/live",
    "test:all": "bun run test:unit && bun run test:live",
    "test:cov": "bun test packages --coverage",
    "test:cov:lcov": "bun test packages --coverage --coverage-reporter=lcov",
    "test:cov:html": "bun test packages --coverage --coverage-reporter=lcov && genhtml ./coverage/lcov.info --output-directory ./coverage/html",
    "test:cov:report": "bun test packages --coverage --coverage-reporter=text --coverage-reporter=lcov && genhtml ./coverage/lcov.info --output-directory ./coverage/html",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@ada-pter/openai": "workspace:*",
    "@biomejs/biome": "^2.3.14",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/npm": "^13.1.4",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/bun": "latest",
    "ada-pter": "workspace:*",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "multi-semantic-release": "^3.1.0",
    "semantic-release": "^25.0.3",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
